FROM mcr.microsoft.com/dotnet/sdk:9.0
WORKDIR /workspace

COPY ISpire.sln ./
COPY ISpire.Web/ISpire.Web.csproj ISpire.Web/
COPY ISpire.Core/ISpire.Core.csproj ISpire.Core/
COPY ISpire.Infrastructure/ISpire.Infrastructure.csproj ISpire.Infrastructure/

RUN dotnet restore ISpire.sln

COPY . .

WORKDIR /workspace/ISpire.Web

EXPOSE 8041

ENV ASPNETCORE_ENVIRONMENT=Development \
    ASPNETCORE_URLS=http://0.0.0.0:8041 \
    DOTNET_USE_POLLING_FILE_WATCHER=1 \
    DOTNET_WATCH_RESTART_ON_RUDE_EDIT=1

ENTRYPOINT ["dotnet", "watch", "run", "--project", "/workspace/ISpire.Web/ISpire.Web.csproj", "--no-hot-reload"]
